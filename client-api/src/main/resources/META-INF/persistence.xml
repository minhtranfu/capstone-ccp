<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="CAPSTONE_CCP" transaction-type="JTA">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <jta-data-source>MySQLDatabase</jta-data-source>
        <class>entities.AdditionalSpecsFieldEntity</class>
        <class>entities.AdditionalSpecsValueEntity</class>
        <class>entities.AdminUserEntity</class>
        <class>entities.AdminAccountEntity</class>
        <class>entities.AvailableTimeRangeEntity</class>
        <class>entities.ConstructionEntity</class>
        <class>entities.ContractorEntity</class>
        <class>entities.DescriptionImageEntity</class>
        <class>entities.EquipmentEntity</class>
        <class>entities.EquipmentTypeEntity</class>
        <class>entities.FeedbackEntity</class>
        <class>entities.FeedbackTypeEntity</class>
        <class>entities.GeneralEquipmentTypeEntity</class>
        <class>entities.HiringTransactionEntity</class>
        <class>entities.NotificationEntity</class>
        <class>entities.SubscriptionEntity</class>
        <class>entities.CartRequestEntity</class>
        <class>entities.TransactionDateChangeRequestEntity</class>
        <properties>

            <!--<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>-->
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/capstone_ccp"/>-->
            <!--<property name="javax.persistence.jdbc.user" value="root"/>-->
            <!--<property name="javax.persistence.jdbc.password" value="12345678"/>-->
            <!--<property name="hbm2ddl.auto" value=""/>-->


            <!--for fixing cdi bug for tomee -->
            <property name="tomee.jpa.factory.lazy" value="true" />

            <!--auto generated by intellij jpa framework support-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <!--create more session for additional lazy fetching-->
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>

            <!--change default id generation stratety to IDENTIFY-->
            <property name="hibernate.id.new_generator_mappings" value="false"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>

    </persistence-unit>
</persistence>