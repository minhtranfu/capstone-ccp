<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="CAPSTONE_CCP"
                      transaction-type="RESOURCE_LOCAL">

        <class>entities.AdditionalSpecsFieldEntity</class>
        <class>entities.AdditionalSpecsValueEntity</class>
        <class>entities.AdminUserEntity</class>
        <class>entities.AdminAccountEntity</class>
        <class>entities.AvailableTimeRangeEntity</class>
        <class>entities.ConstructionEntity</class>
        <class>entities.ContractorEntity</class>
        <class>entities.DescriptionImageEntity</class>
        <class>entities.EquipmentEntity</class>
        <class>entities.EquipmentTypeEntity</class>
        <class>entities.FeedbackEntity</class>
        <class>entities.FeedbackTypeEntity</class>
        <class>entities.GeneralEquipmentTypeEntity</class>
        <class>entities.HiringTransactionEntity</class>
        <class>entities.NotificationEntity</class>
        <class>entities.SubscriptionEntity</class>
        <class>entities.CartRequestEntity</class>
        <properties>

            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/capstone_ccp" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="12345678" />
            <property name="hbm2ddl.auto" value="create" />
            <property name="openjpa.Log" value="openjpa.jdbc.SQL=trace"/>


            <!--auto generated by intellij jpa framework support-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <!--<property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/capstone_ccp"/>-->
            <!--<property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>-->
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/capstone_ccp"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <!--<property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/capstone_ccp"/>-->
            <!--<property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>-->
            <!--<property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/capstone_ccp"/>-->
            <!--<property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>-->
        </properties>

    </persistence-unit>
</persistence>