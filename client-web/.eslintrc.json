{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "_": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "extends": [ "eslint:recommended", "standard", "plugin:react/recommended" ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.6.3s"
    }
  },
  "rules": {
    "eqeqeq": [2, "always"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "jsx-quotes": [2, "prefer-double"],
    "react/display-name": [0, { "ignoreTranspilerName": true }],
    "no-console": ["error", { "allow": ["log", "warn", "error"]}],
    "no-debugger": 2,
    "no-extend-native": 0,
    "no-var": 1,
    "quotes": [2, "single"],
    "react/prop-types": 1,
    "react/no-find-dom-node": 0,
    "semi": [2, "always"]
  }
}
